<%- version = node[:postgresql][:version] -%>
<%- version_without_dot = version.split('.').join -%>
[pgdg<%= version_without_dot %>]
name=PostgreSQL <%= version %> $releasever - $basearch
baseurl=http://yum.postgresql.org/<%= version %>/redhat/rhel-$releasever-$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-PGDG

[pgdg<%= version_without_dot %>-source]
name=PostgreSQL <%= version %> $releasever - $basearch - Source
failovermethod=priority
baseurl=http://yum.postgresql.org/srpms/<%= version %>/redhat/rhel-$releasever-$basearch
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-PGDG
