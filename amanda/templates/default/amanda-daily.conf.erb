<% amanda = node[:amanda] -%>
<% base_dir = node[:amanda][:daily][:base_dir] -%>
dumpcycle 5 days

includefile "/etc/amanda/amanda.conf.inc"

org       "Daily"
labelstr  "Daily-[0-9]+"
autolabel "Daily-<%= '%' * amanda[:number_of_tapes].to_s().length %>" EMPTY VOLUME-ERROR

tpchanger "chg-disk:<%= base_dir %>/tapes"
indexdir  "<%= base_dir %>/indexes"
infofile  "<%= base_dir %>/info"
logdir    "<%= base_dir %>/logs"

holdingdisk hd {
    directory "<%= base_dir %>/holding"
}
