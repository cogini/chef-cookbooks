<% postfix = node[:postfix] -%>
###
# Generated by Chef for <%= node[:fqdn] %>
###

myhostname = <%= postfix[:myhostname] %>
myorigin = <%= postfix[:myorigin] %>
smtpd_banner = $myhostname ESMTP $mail_name
relayhost = <%= postfix[:relayhost] %>
inet_interfaces = all
mynetworks = <%= postfix[:mail_relay_networks].join(', ') %>
mynetworks_style = <%= postfix[:mynetworks_style] %>

# Set to empty if using virtual domain
local_recipient_maps = <%= postfix[:local_recipient_maps] %>
mydestination = <%= postfix[:myhostname] %>, <%= node[:hostname] %>, localhost.localdomain, localhost

# how long if undelivered before sending warning update to sender
delay_warning_time = 4h
# will it be a permanent endrror or temporary
unknown_local_recipient_reject_code = 450
# how long to keep message on queue before return as failed.
# some have 3 days, I have 16 days as I am backup server for some people
# whom go on holiday with their server switched off.
maximal_queue_lifetime = 5d
# max and min time in seconds between retries if connection failed
minimal_backoff_time = 300s
maximal_backoff_time = 4000s
# how long to wait when servers connect before receiving rest of data
smtp_helo_timeout = 300s
# how many address can be used in one message.
# effective stopper to mass spammers, accidental copy in whole address list
# but may restrict intentional mail shots.
smtpd_recipient_limit = 100
# how many error before back off.
smtpd_soft_error_limit = 10
# how many max errors before blocking it.
smtpd_hard_error_limit = 20

# Requirements for the HELO statement
smtpd_helo_restrictions = <%= postfix[:smtpd_helo_restrictions].join(', ') %>
# Requirement for the recipient address
smtpd_recipient_restrictions = <%= postfix[:smtpd_recipient_restrictions].join(', ') %>
smtpd_data_restrictions = <%= postfix[:smtpd_data_restrictions].join(', ') %>
# Requirements for the sender details
smtpd_sender_restrictions = <%= postfix[:smtpd_sender_restrictions].join(', ') %>

# require proper helo at connections
smtpd_helo_required = yes
# waste spammers time before rejecting them
smtpd_delay_reject = yes
disable_vrfy_command = yes

alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases

# this specifies where the virtual mailbox folders will be located
virtual_mailbox_base = /var/spool/mail/virtual
# this is for the mailbox location for each user
virtual_mailbox_maps = <%= postfix[:virtual_mailbox_maps] %>
# and this is for aliases
virtual_alias_maps = <%= postfix[:virtual_alias_maps] %>
# and this is for domain lookups
virtual_mailbox_domains = <%= postfix[:virtual_mailbox_domains] %>
# this is how to connect to the domains (all virtual, but the option is there)
transport_maps = <%= postfix[:transport_maps_file] %>

virtual_uid_maps = static:5000
virtual_gid_maps = static:5000

mailbox_size_limit = <%= postfix[:mailbox_size_limit] %>
message_size_limit = <%= postfix[:message_size_limit] %>

content_filter = <%= postfix[:conten_filter] %>

# SMTP Authentication (SASL)
smtpd_sasl_auth_enable = yes
broken_sasl_auth_clients = no
smtpd_sasl_security_options = noanonymous
smtpd_sasl_local_domain = $myhostname
#smtpd_sasl_local_domain =

recipient_delimiter = +

<% if postfix[:smtp_sasl_auth_enable] == 'yes' -%>
#smtp_sasl_auth_enable = <%= postfix[:smtp_sasl_auth_enable] %>
#smtp_sasl_password_maps = <%= postfix[:smtp_sasl_password_maps] %>
#smtp_sasl_security_options = <%= postfix[:smtp_sasl_security_options] %>
smtp_tls_CAfile = <%= postfix[:smtp_tls_cafile] %>
<% end -%>

<% if postfix[:smtpd_use_tls] == 'yes' -%>
smtp_use_tls = <%= postfix[:smtp_use_tls] %>
smtpd_tls_security_level = <%= postfix[:smtpd_tls_security_level] %>
smtp_tls_security_level = <%= postfix[:smtp_tls_security_level] %>
smtpd_use_tls = <%= postfix[:smtpd_use_tls] %>
smtp_tls_note_starttls_offer = <%= postfix[:smtp_tls_note_starttls_offer] %>
smtpd_tls_loglevel = 1
smtpd_tls_received_header = yes
smtpd_tls_session_cache_timeout = 3600s
tls_random_source = dev:/dev/urandom
smtpd_tls_cert_file=/etc/ssl/certs/ssl-cert-snakeoil.pem
smtpd_tls_key_file=/etc/ssl/private/ssl-cert-snakeoil.key
#smtpd_tls_session_cache_database = btree:${queue_directory}/smtpd_scache
#smtp_tls_session_cache_database = btree:${queue_directory}/smtp_scache
<% end -%>


# Force incoming mail to go through Amavis
receive_override_options = <%= postfix[:receive_override_options] %>


# disable_dns_lookups = <%= postfix[:disable_dns_lookups] %>
# inet_protocols = <%= postfix[:inet_protocols] %>
relay_domains = <%= postfix[:relay_domains].join(', ') %>
# relay_recipient_maps = <%= postfix[:relay_recipient_maps] %>

<% if postfix[:mydomain] -%>
mydomain = <%= postfix[:mydomain] %>
<% end -%>

append_dot_mydomain = no
biff = no
